<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="111.3dp"
    android:layout_marginLeft="31.7dp"
    android:layout_marginTop="9.7dp"
    android:layout_marginRight="21.3dp"
    android:layout_marginBottom="9.7dp"
    android:background="#d3d3d3"
    app:cardCornerRadius="8.3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.example.zomatoapp.helpers.SelectableRoundedImageView
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:background="#d4d4d4"
            android:visibility="visible"
            app:sriv_left_bottom_corner_radius="8.3dp"
            app:sriv_left_top_corner_radius="8.3dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13.3dp"
            android:orientation="vertical">


            <View
                android:layout_width="150dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="9.7dp"
                android:background="#d4d4d4"
                android:textColor="#525252"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="#d4d4d4" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>