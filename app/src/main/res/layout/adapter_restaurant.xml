<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="111.3dp"
    android:layout_marginLeft="31.7dp"
    android:layout_marginTop="9.7dp"
    android:layout_marginRight="21.3dp"
    android:layout_marginBottom="9.7dp"
    android:background="@drawable/card_shadow"
    app:cardCornerRadius="8.3dp"
    app:cardElevation="6.7dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.example.zomatoapp.helpers.SelectableRoundedImageView
            android:id="@+id/ivRestaurant"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:src="@drawable/cat_img"
            android:visibility="visible"
            app:sriv_left_bottom_corner_radius="8.3dp"
            app:sriv_left_top_corner_radius="8.3dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13.3dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvRestaurantName"
                fontPath="fonts/gotham_rounded_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="9.7dp"
                android:textColor="#525252"
                android:textSize="16sp"
                tools:text="JawBreaker Burger" />

            <TextView
                android:id="@+id/tvRestaurantDesc"
                fontPath="fonts/gotham_rounded_book.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="Goey Cheesy Omlette, Smoked
Bacon strips, Jalepeno poppers
" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>